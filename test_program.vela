/*
Programa de prueba para TASK-097: Implementar vela build

Un programa simple que demuestra la funcionalidad básica.
*/

fn main() -> void {
    println("¡Hola desde Vela!")
    println("Este programa fue compilado con 'vela build'")

    // Operaciones básicas
    x: Number = 42
    y: Number = x * 2
    println("Resultado: ${y}")

    // Interpolación literal (como template strings)
    name: String = "Vela"
    println("Hola ${name}, bienvenido!")

    // Condicional
    if y > 50 {
        println("¡El resultado es mayor que 50!")
    } else {
        println("El resultado es ${y}")
    }
}