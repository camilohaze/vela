import 'stdlib:test'

@describe("Basic Arithmetic")
module BasicArithmeticSpec {

    @it("should perform basic arithmetic operations")
    fn test_basic_arithmetic() -> void {
        result: Number = 2 + 3
        assert(result == 5, "2 + 3 should equal 5")
    }

    @it("should concatenate strings")
    fn test_string_concatenation() -> void {
        greeting: String = "Hello" + " " + "World"
        assert(greeting == "Hello World", "String concatenation should work")
    }
}