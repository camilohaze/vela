fn fibonacci(n: Number) -> Number {
  if n <= 1 {
    return n
  }
  return fibonacci(n - 1) + fibonacci(n - 2)
}

@test
fn testRecursion() -> void {
  fib5 = fibonacci(5)
  fib8 = fibonacci(8)

  println("âœ… RecursiÃ³n: fib(5)=${fib5}, fib(8)=${fib8}")
}

